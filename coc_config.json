{
  "languageserver": {
    "clangd": {
      "enable": false,
      "command": "/usr/local/opt/llvm/bin/clangd",
      "args": ["--background-index=false", "-completion-style=detailed", "-log=error", "-pretty", "-limit-results=100", "-j=2", "-pch-storage=disk", "-resource-dir=/Applications/Xcode.app/Contents/Developer/Toolchains/XcodeDefault.xctoolchain/usr/lib/clang/11.0.0", "-header-insertion-decorators=0"],
      "rootPatterns": ["compile_flags.txt", "compile_commands.json", ".vim/", ".git/", ".hg/"],
      "filetypes": ["c", "cpp", "objc", "objcpp"]
    },
    "ccls": {
      "enable": false,
      "command": "ccls",
      "filetypes": ["c", "cpp", "objc", "objcpp"],
      "rootPatterns": [".ccls", "compile_commands.json", ".vim/", ".git/", ".hg/"],
      "initializationOptions": {
        "cache": {
          "directory": "/tmp/ccls"
        }
      }
    }
  }
}
