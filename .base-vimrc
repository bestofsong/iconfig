" setup s:IDE_CONF map used to change behavior according to WS_IDE value {{{
let s:IDE_CONF_MAP = {
      \ 'xvim': { 'color_scheme': 0 }
      \ }

if exists('$WS_IDE')
let s:IDE_CONF = s:IDE_CONF_MAP[$WS_IDE]
endif

" 检查是否为该ide设置了conf_name配置
function! s:ide_specified(conf_name)
  if !exists('s:IDE_CONF')
    return 0
  endif
  return has_key(s:IDE_CONF, a:conf_name)
endfunction
" s:ide_specified为1的情况下返回该配置的值
function! s:ide_use(conf_name)
  return s:IDE_CONF[a:conf_name]
endfunction
