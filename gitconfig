[merge]
	tool              = kdiff3
[diff]
	tool              = kdiff3
[alias]
    lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
    ll = log --branches --remotes --tags --graph --oneline --decorate --color --abbrev-commit  --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset'
    ph = push --recurse-submodules=check
    review = log --color --pretty=format:'%Cred%cI%Creset / %Cred%h%Creset / %C(bold blue)%an%Creset / %Cgreen%s%Creset'
